<h1>Edit @Model.GetName()</h1>
<form action="/stylist/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="stylist-id" type="hidden" value="@Model.GetId()">
  <label for="stylist-name">Name</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <br>
  <button type="submit">Submit</button>
</form>
<br>
<h4><a href="/stylists">Return to Stylists</a></h4>
